<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<GridPane xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="control.LoginControl" styleClass="login" hgap="15"
	vgap="15">

	<padding>
		<Insets left="40" right="40" top="40" bottom="40" />
	</padding>

	<columnConstraints>
		<ColumnConstraints minWidth="60" prefWidth="60"
			halignment="right" />
		<ColumnConstraints prefWidth="200"
			maxWidth="Infinity" hgrow="ALWAYS" />
	</columnConstraints>

	<Label text="Seja Bem Vindo" styleClass="login-titulo"
		GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"
		GridPane.halignment="CENTER">

		<GridPane.margin>
			<Insets top="10" bottom="10" />
		</GridPane.margin>

	</Label>

	<Label text="Codigo de acesso: " styleClass="login-form-label"
		GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2" ></Label>
	<PasswordField fx:id="codigo" GridPane.columnIndex="0"
		GridPane.rowIndex="2" GridPane.columnSpan="2"
		GridPane.halignment="CENTER">
	</PasswordField>


	<Button text="Entrar" GridPane.columnIndex="0"
		styleClass="login-form-botao" GridPane.rowIndex="3" onAction="#entrar"
		GridPane.columnSpan="2" GridPane.halignment="CENTER">

		<GridPane.margin>
			<Insets top="20" bottom="20" />
		</GridPane.margin>
	</Button>

</GridPane>

